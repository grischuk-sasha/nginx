/var/log/nginx/*.log {
  daily
  rotate 30
  missingok
  compress
  delaycompress
  notifempty
  create 640 root root
  postrotate
    if [ -f /run/nginx.pid ]; then
        kill -USR1 `cat /run/nginx.pid`
    fi

    if [ -f /run/supervisord.pid ]; then
        kill -USR2 `cat /run/supervisord.pid`
    fi
  endscript
}